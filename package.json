{
  "name": "meddey-tech-workspace",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "projecthub",
    "tools/quote-app/backend",
    "tools/quote-app/frontend",
    "tools/inventory-management/backend",
    "tools/inventory-management/frontend",
    "tools/GSHEET/client"
  ],
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently --names \"HUB,QUOTE,INVENTORY,GSHEET\" \"npm run dev:hub\" \"npm run dev:quote\" \"npm run dev:inventory\" \"npm run dev:gsheet\"",
    "dev:hub": "cross-env NODE_ENV=development next dev --turbopack -p 4090",
    "dev:quote": "node scripts/start-quote.js",
    "dev:inventory": "node scripts/start-inventory.js",
    "dev:gsheet": "node scripts/start-gsheet.js",
    "start:comprehensive": "node scripts/start-comprehensive.js",
    "start:quick": "node scripts/quick-start.js",
    "setup:all": "npm run setup:projecthub && npm run integrate:projecthub",
    "integrate:projecthub": "node scripts/integrate-projecthub.js",
    "build": "next build",
    "build:hub-only": "next build",
    "start": "next start -p 4090",
    "lint": "eslint",
    "workspace": "npm run dev",
    "cleanup:uploads": "node scripts/cleanup-uploads.mjs",
    "cleanup:logs": "node scripts/cleanup-logs.js",
    "cleanup:all": "npm run cleanup:uploads && npm run cleanup:logs",
    "postinstall": "npm run install:python-deps && npm run setup:projecthub",
    "install:python-deps": "pip install -r requirements.txt",
    "setup:projecthub": "cd projecthub && npm link"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
